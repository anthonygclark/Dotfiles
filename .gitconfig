[user]
    name = Anthony Clark
    email = aclark@bbn.com
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    ll = log --graph --decorate --pretty=oneline --abbrev-commit
    lla = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    ign = ls-files -o -i --exclude-standard
    up = !git remote update --prune && git merge --ff-only @{u}
    rebaseu = rebase --preserve-merges @{u}
    logu = log -p @{u}..
[push]
    default = simple
